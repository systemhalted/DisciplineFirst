root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.java]
indent_size = 2

[*.{yml,yaml,json,xml,properties,gradle,groovy,kts}]
indent_size = 2

[Makefile]
indent_style = tab
